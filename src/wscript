def build(bld):
  source_files = """
  emitters/szlunique.cc
  emitters/top.cc
  emitters/quantile.cc
  utilities/hashutils.cc
  """
  
  bld(source = source_files,
      features ='cxx cxxshlib',
      name     = 'szaru',
      target   = 'szaru',
      lib = 'ssl',
      includes     = '.')

  bld(source = source_files,
      features ='cxx cxxstlib',
      name     = 'szaru',
      target   = 'szaru',
      lib = 'ssl',
      includes     = '.')

  bld.install_files('${PREFIX}/include', "szaru.h")
 











 



















